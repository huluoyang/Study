.zjdgx-canvas-upload
   margin: 0 auto;
   padding: 10px 20px;
   display inline-block
   border: 1px solid #aaa;
   canvas
      cursor move
      border 1px solid #aaa
      border-right none
   input
      display block
   .options
      float right
      height 100px
      border 1px solid #aaa
      display: inline-block
   .icon
      display block
      cursor pointer
      text-align center
      vertical-align middle
      border-bottom 1px solid #aaa
   .cancel
      border-bottom none