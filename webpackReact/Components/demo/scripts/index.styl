body
   margin 0
   background #f1f1f1
   font 12px/1.5 'Courier New', 'Microsoft Yahei'
#component-demo
   overflow hidden
.component-nav
   float left
   width 200px
   background #fff
   min-height 120px
   margin-left 20px
   box-shadow 1px 1px 2px rgba(0,0,0,0.3)
   a
    color #000
    height 24px
    display block
    padding 0 10px
    line-height 24px
    border-bottom 1px solid #ccc
    text-decoration none
.component-container
   padding 20px 0
.component-list
   display flex
   margin-left 240px
.item
   flex 1
   padding 10px 0
   background #fff
   margin-right 20px
   box-shadow 0 1px 5px rgba(0,0,0,0.3)
   h2
      margin 0
