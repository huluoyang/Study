html, body
   height 100%
body
   margin 0
   font 12px/1.5 'Courier New', 'Microsoft Yahei'
.hide
   display none !important
.component-container
   height 100%
#components-demo
   height 100%
   overflow hidden
.component-nav
   float left
   width 300px
   height 100%
   background #fff
   min-height 120px
   border-right 1px solid #ccc
   a
    color #000
    height 24px
    display block
    padding 0 10px
    line-height 24px
    text-decoration none
    border-bottom 1px solid #ccc
.component-list
   display flex
   flex-wrap wrap
   margin-left 240px
.item
   flex 1
   padding 10px 0
   background #fff
   min-width 200px
   border-color #ccc
   border-style solid
   border-width 0 0 1px 1px
   h2
      margin 0
.zjdgx-dropdown
   margin-left 10px
   display inline-block
#loading
   border-left none