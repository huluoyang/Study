.zjdgx-file-input
   width 60px
   height 22px
   line-height 22px
   position relative
   border 1px solid #bdc6c4
   span
      top 0
      left 0
      width 100%
      height 22px
      display block
      position absolute
      text-align center
   input
      opacity 0
      z-index 1
      width 100%
      height 24px
      display block
      cursor pointer
      position absolute
